{
  "maxLineLength": {
    "head": 100,
    "body": 100
  },
  "types": [
    {
      "key": "feat",
      "name": "Features",
      "description": "âœ¨  A new feature (note: this will indicate a release)"
    },
    {
      "key": "fix",
      "name": "Bug Fixes",
      "description": "ðŸ›   A bug fix (note: this will indicate a release)"
    },
    {
      "key": "perf",
      "name": "Performance Improvements",
      "description": "A code change that improves performance"
    },
    {
      "key": "docs",
      "name": "Documentation",
      "description": "Documentation only changes"
    },
    {
      "key": "style",
      "name": "Styles",
      "description": "Changes that do not affect the meaning of the code\n                  (white-space, formatting, missing semi-colons, etc)",
      "hide": true
    },
    {
      "key": "refactor",
      "name": "Code Refactoring",
      "description": "A code change that neither fixes a bug nor adds a feature",
      "hide": true
    },
    {
      "key": "test",
      "name": "Tests",
      "description": "A code change that improves performance",
      "hide": false
    },
    {
      "key": "chore",
      "name": "Chores",
      "description": "Changes to the build process or auxiliary tools\n                  and libraries such as documentation generation",
      "hide": false
    },
    {
      "key": "revert",
      "name": "Reverts",
      "description": "Revert to a commit",
      "commitable": false
    },
    {
      "key": "WIP",
      "name": "WIP",
      "description": "Work in progress"
    }
  ],
  "scopes": [
    {
      "name": "package"
    },
    {
      "name": "docs"
    },
    {
      "name": "test"
    },
    {
      "name": "ci"
    },
    {
      "name": "travis"
    }
  ],
  "notes": [
    {
      "keyword": "BREAKING CHANGE",
      "important": true
    }
  ],
  "allowCustomScopes": true,
  "allowBreakingChanges": ["feat", "fix"]
}
