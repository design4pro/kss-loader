  },
  "devDependencies": {
    "add": "^2.0.6",
    "chai": "^4.0.2",
    "codecov": "^2.2.0",
    "commitizen": "^2.9.6",
    "cross-env": "^5.0.0",
    "cz-release-me": "^1.2.0",
    "debug": "^3.0.0",
    "git-dummy-commit": "^1.3.0",
    "istanbul": "^0.4.5",
    "jscs": "^3.0.7",
    "jshint": "^2.9.4",
    "mocha": "^3.4.2",
    "mock-git": "1.0.3",
    "node-sass": "^4.5.3",
    "nyc": "^11.0.2",
