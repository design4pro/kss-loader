{
  "name": "kss-loader",
  "version": "0.3.2",
  "description": "Webpack loader for kss-node",
  "author": {
    "name": "RafaÅ‚ Wolak",
    "email": "r.wolak@design4.pro",
    "url": "https://www.design4.pro"
  },
  "main": "index.js",
  "engines": {
    "node": ">=0.12.0 || >=4.3.0 <5.0.0 || >=5.10"
  },
  "files": [
    "README.md",
    "LICENSE",
    "lib",
    "index.js",
    "schema.js"
  ],
  "scripts": {
    "release": "release-me",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "test": "nyc --reporter=html --reporter=text mocha --timeout 20000 --reporter spec $(find . -name '*test.js' ! -ipath '*node_modules*')",
    "test:check-coverage": "nyc check-coverage --statements 90 --branches 70 --functions 97 --lines 90",
    "test:debug": "DEBUG=mocha npm t",
    "test:watch": "npm t -- --watch"
  },
  "dependencies": {
    "kss": "^3.0.0-beta.18",
    "loader-utils": "^1.1.0",
    "schema-utils": "^0.3.0"
  },
  "devDependencies": {
    "add": "^2.0.6",
    "commitizen": "^2.9.6",
    "cross-env": "^5.0.0",
    "cz-release-me": "^1.2.0",
    "jscs": "^3.0.7",
    "jshint": "^2.9.4",
    "release-me": "^1.3.0",
    "rimraf": "^2.6.1",
    "webpack": "^2.5.1"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-release-me"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/design4pro/kss-loader.git"
  },
  "bugs": {
    "url": "https://github.com/design4pro/kss-loader/issues/"
  },
  "homepage": "https://github.com/design4pro/kss-loader#readme",
  "license": "MIT",
  "keywords": [
    "kss",
    "kss-node",
    "webpack",
    "loader"
  ]
}
