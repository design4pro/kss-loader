{
  "name": "kss-loader",
  "version": "0.0.0-development",
  "description": "Webpack loader for kss-node",
  "author": {
    "name": "RafaÅ‚ Wolak",
    "email": "r.wolak@design4.pro",
    "url": "https://www.design4.pro"
  },
  "main": "dist/cjs.js",
  "engines": {
    "node": ">=0.12.0 || >=4.3.0 <5.0.0 || >=5.10"
  },
  "files": [
    "README.md",
    "LICENSE",
    "dist"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production babel -s true src -d dist",
    "changelog": "conventional-changelog -p custom-bugs -i CHANGELOG.md -s",
    "commit": "git-cz",
    "lint": "eslint ./src",
    "prebuild": "rimraf dist",
    "prepublish": "npm run build",
    "post-release": "./scripts/post-release.sh",
    "release": "npm run semantic-release && npm run post-release",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "peerDependencies": {
    "kss": "^3.0.0-beta.18",
    "webpack": "^2.5.1"
  },
  "dependencies": {
    "loader-utils": "^1.1.0",
    "schema-utils": "^0.3.0"
  },
  "devDependencies": {
    "add": "^2.0.6",
    "babel-cli": "^6.24.1",
    "babel-jest": "^20.0.3",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.5.0",
    "commitizen": "^2.9.6",
    "conventional-changelog-cli": "^1.3.1",
    "conventional-changelog-custom-bugs": "0.0.1",
    "cross-env": "^5.0.0",
    "cz-customizable": "^5.0.0",
    "eslint": "^3.19.0",
    "eslint-config-canonical": "^8.2.1",
    "eslint-config-webpack": "^1.2.3",
    "jscs": "^3.0.7",
    "jshint": "^2.9.4",
    "rimraf": "^2.6.1",
    "semantic-release": "^6.3.6",
    "webpack": "^2.5.1"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/design4pro/kss-loader.git"
  },
  "bugs": {
    "url": "https://github.com/design4pro/kss-loader/issues"
  },
  "homepage": "https://github.com/design4pro/kss-loader#readme",
  "license": "MIT",
  "keywords": [
    "kss",
    "kss-node",
    "webpack",
    "loader"
  ]
}
